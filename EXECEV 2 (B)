parent.c
#include <stdio.h>
#include <unistd.h>
#include <stdlib.h>
#include <sys/wait.h>

int main() {
    int arr[5], i;
    printf("Enter 5 numbers:\n");
    for (i = 0; i < 5; i++)
        scanf("%d", &arr[i]);

    // Parent sorts array
    for (int i = 0; i < 5; i++) {
        for (int j = i + 1; j < 5; j++) {
            if (arr[i] > arr[j]) {
                int temp = arr[i];
                arr[i] = arr[j];
                arr[j] = temp;
            }
        }
    }

    printf("Parent sorted array (Ascending): ");
    for (i = 0; i < 5; i++)
        printf("%d ", arr[i]);
    printf("\n");

    int pid = fork();

    if (pid == 0) {
        // --- Child Process ---
        char *args[7]; // 5 numbers + program name + NULL
        args[0] = "./child";
        char num[5][10];        //create a 2D character array to store the numbers as strings Because execve() only accepts strings.
        for (i = 0; i < 5; i++) {
            sprintf(num[i], "%d", arr[i]); // convert arr[i] into string and store in num[i] eg;- "10"
            args[i + 1] = num[i];
        }
        args[6] = NULL;

        execve("./child", args, NULL);
        perror("execve failed");
    } 
    else {
        wait(NULL);
        printf("Child finished showing reversed array.\n");
    }

    return 0;
}

chil.c
#include <stdio.h>

int main(int argc, char *argv[]) {
    printf("Child received array in reverse order:\n");
    for (int i = 1; i < argc; i++) {
      printf("%s ", argv[i]);
    }
    printf("\n");
    return 0;
}


gcc parent.c -o parent
gcc child.c -o child
./parent
  
