parent.c
#include <stdio.h>
#include <unistd.h>
#include <stdlib.h>
#include <sys/wait.h>

int main() {
    int arr[5], i;
    printf("Enter 5 numbers:\n");
    for (i = 0; i < 5; i++)
        scanf("%d", &arr[i]);

    // Parent sorts array in ascending order
    for (int i = 0; i < 5; i++) {
        for (int j = i + 1; j < 5; j++) {
            if (arr[i] > arr[j]) {
                int temp = arr[i];
                arr[i] = arr[j];
                arr[j] = temp;
            }
        }
    }

    printf("Parent sorted array (Ascending): ");
    for (i = 0; i < 5; i++)
        printf("%d ", arr[i]);
    printf("\n");

    int pid = fork();  // Create child process

    if (pid == 0) {
        // --- Child Process ---
        char *args[7]; // 5 numbers + program name + NULL
        args[0] = "./ch";
        char num[5][10];

        for (i = 0; i < 5; i++) {
            sprintf(num[i], "%d", arr[i]);
            args[i + 1] = num[i];
        }
        args[6] = NULL;

        execve("./ch", args, NULL);
        perror("execve failed");
    } 
    else {
        wait(NULL);
        printf("\nChild finished showing reversed array.\n");
    }

    return 0;
}



ch.c
#include <stdio.h>
#include <stdlib.h>

int main(int argc, char *argv[]) {
    printf("Child received numbers:\n");
    for (int i = 1; i < argc; i++)
        printf("%s ", argv[i]);

    printf("\nReversed order:\n");
    for (int i = 1; i < argc; i++)
        printf("%s ", argv[argc - i]);

    printf("\n");
    return 0;
}



gcc parent.c -o parent
gcc child.c -o child
./parent
  
