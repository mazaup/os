writer.c
#include <stdio.h>
#include <stdlib.h>
#include <fcntl.h>
#include <unistd.h>

int main() {
    char input[200], output[200];
    int fd1, fd2;

    // --- Open the two FIFOs (Named Pipes) ---
    // fifo1: used to send data (write only)
    // fifo2: used to receive data (read only)
    fd1 = open("fifo1", O_WRONLY);
    fd2 = open("fifo2", O_RDONLY);

    // --- Accept a sentence from the user ---
    printf("Enter a sentence: ");
    fgets(input, sizeof(input), stdin);

    // --- Write the user input into fifo1 ---
    write(fd1, input, sizeof(input));

    // --- Read the processed result from fifo2 ---
    read(fd2, output, sizeof(output));

    // --- Display result received from Process 2 (reader.c) ---
    printf("\n--- Result from Process 2 ---\n");
    printf("%s\n", output);

    // --- Close both FIFO file descriptors ---
    close(fd1);
    close(fd2);

    return 0;
}


reader.c
#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <fcntl.h>
#include <unistd.h>

int main() {
    char input[200], result[200];
    int fd1, fd2;
    FILE *fp;
    int chars = 0, words = 0, lines = 0;

    // --- Open the two FIFOs ---
    // fifo1: used to read input from writer process
    // fifo2: used to send result back to writer
    fd1 = open("fifo1", O_RDONLY);
    fd2 = open("fifo2", O_WRONLY);

    // --- Read the input data from fifo1 ---
    read(fd1, input, sizeof(input));

    // --- Count characters, words, and lines ---
    for (int i = 0; input[i] != '\0'; i++) {
        if (input[i] != ' ' && input[i] != '\n')
            chars++; // Count characters except spaces/newlines
        if (input[i] == ' ' || input[i] == '\n')
            words++; // Count words separated by space or newline
        if (input[i] == '\n')
            lines++; // Count each newline
    }
    lines++; // Add one line (last line)

    // --- Write the results into a file ---
    fp = fopen("output.txt", "w");
    fprintf(fp, "Characters: %d\nWords: %d\nLines: %d\n", chars, words, lines);
    fclose(fp);

    // --- Read file content into result buffer ---
    fp = fopen("output.txt", "r");
    fread(result, sizeof(char), sizeof(result), fp);
    fclose(fp);

    // --- Send result string to writer through fifo2 ---
    write(fd2, result, sizeof(result));

    // --- Close both FIFOs ---
    close(fd1);
    close(fd2);

    return 0;
}


gcc writer.c -o writer
gcc reader.c -o reader
mkfifo fifo1 fifo2

Then open two terminals:
Terminal 1:
./reader

Terminal 2:
./writer
reader.c
