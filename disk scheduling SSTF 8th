 # include <stdio.h>
 # include <stdlib.h>
 int main(){
  int n, head, diff, total = 0;
  printf("Enter the Total No. of Requests: ");
  scanf("%d",&n);
  int req[n], done[n];
  printf("Enter Request Sequence: ");
  for(int i = 0; i < n;i++){
    scanf("%d",&req[i]);
    done[i] = 0;
  }
  printf("Enter Inital Head position: ");
  scanf("%d", &head);
  printf("\nSeek Sequence: ");
  for(int i = 0;i < n;i++){
    int min = 100000;
    int pos = -1; 
    for(int j = 0;j < n;j++){
      if(!done[j]){
        int diff = abs(req[j] - head);
        if(diff < min){
          min = diff;
          pos = j;
        }
      }
    }
    done[pos] = 1;
    total += min;
    head = req[pos];
    printf("%d ", head);
  }
  printf("\nTotal Head Movement = %d\n",total);
  return 0;
 }
